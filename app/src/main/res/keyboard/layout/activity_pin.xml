<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout android:orientation="vertical" android:background="#f6f7fd" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/layout_header"/>


    <LinearLayout android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginTop="80dp" android:layout_gravity="center">


    <FrameLayout android:layout_height="34dp" android:layout_width="34dp" android:layout_marginEnd="15dp">

    <ImageView android:layout_height="18dp" android:layout_width="18dp" android:layout_gravity="center"
        android:src="@drawable/pin_normal" android:id="@+id/iv_pin_1"/>

    <ImageView android:layout_height="match_parent" android:layout_width="match_parent"
        android:src="@drawable/pin_bg" android:id="@+id/iv_pin_choice_1" tools:visibility="visible" android:visibility="invisible"/>

    <EditText android:background="@null" android:layout_height="match_parent"
        android:layout_width="match_parent" android:id="@+id/et_pin_1"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
        android:inputType="numberDecimal" android:ems="10" android:cursorVisible="false"/>

</FrameLayout>


    <FrameLayout android:layout_height="34dp" android:layout_width="34dp" android:layout_marginEnd="15dp">

    <ImageView android:layout_height="18dp" android:layout_width="18dp" android:layout_gravity="center" android:src="@drawable/pin_normal" android:id="@+id/iv_pin_2"/>

    <ImageView android:layout_height="match_parent" android:layout_width="match_parent" android:src="@drawable/pin_bg" android:id="@+id/iv_pin_choice_2" android:visibility="invisible"/>

    <EditText android:background="@null" android:layout_height="match_parent" android:layout_width="match_parent"
        android:id="@+id/et_pin_2" tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
        android:inputType="numberDecimal" android:ems="10" android:cursorVisible="false"/>

</FrameLayout>


    <FrameLayout android:layout_height="34dp" android:layout_width="34dp" android:layout_marginEnd="15dp">

    <ImageView android:layout_height="18dp" android:layout_width="18dp" android:layout_gravity="center"
        android:src="@drawable/pin_normal" android:id="@+id/iv_pin_3"/>

    <ImageView android:layout_height="match_parent" android:layout_width="match_parent"
        android:src="@drawable/pin_bg" android:id="@+id/iv_pin_choice_3" android:visibility="invisible"/>

    <EditText android:background="@null" android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/et_pin_3" tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" android:inputType="numberDecimal" android:ems="10" android:cursorVisible="false"/>

</FrameLayout>


    <FrameLayout android:layout_height="34dp" android:layout_width="34dp" android:layout_marginEnd="15dp">

    <ImageView android:layout_height="18dp" android:layout_width="18dp" android:layout_gravity="center"
        android:src="@drawable/pin_normal" android:id="@+id/iv_pin_4"/>

    <ImageView android:layout_height="match_parent" android:layout_width="match_parent" android:src="@drawable/pin_bg" android:id="@+id/iv_pin_choice_4" android:visibility="invisible"/>

    <EditText android:background="@null" android:layout_height="match_parent"
        android:layout_width="match_parent" android:id="@+id/et_pin_4" tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" android:inputType="numberDecimal" android:ems="10" android:cursorVisible="false"/>

</FrameLayout>


    <FrameLayout android:layout_height="34dp" android:layout_width="34dp" android:layout_marginEnd="15dp">

    <ImageView android:layout_height="18dp" android:layout_width="18dp" android:layout_gravity="center" android:src="@drawable/pin_normal" android:id="@+id/iv_pin_5"/>

    <ImageView android:layout_height="match_parent" android:layout_width="match_parent" android:src="@drawable/pin_bg" android:id="@+id/iv_pin_choice_5" android:visibility="invisible"/>

        <EditText
            android:id="@+id/et_pin_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:cursorVisible="false"
            android:ems="10"
            android:inputType="numberDecimal"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

</FrameLayout>


    <FrameLayout android:layout_height="34dp" android:layout_width="34dp">

    <ImageView android:layout_height="18dp" android:layout_width="18dp" android:layout_gravity="center" android:src="@drawable/pin_normal" android:id="@+id/iv_pin_6"/>

    <ImageView android:layout_height="match_parent" android:layout_width="match_parent" android:src="@drawable/pin_bg" android:id="@+id/iv_pin_choice_6" android:visibility="invisible"/>

    <EditText android:background="@null" android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/et_pin_6" tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" android:inputType="numberDecimal" android:ems="10" android:cursorVisible="false"/>

</FrameLayout>

</LinearLayout>

</LinearLayout>