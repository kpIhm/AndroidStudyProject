<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/layout_header"/>

    <TextView android:layout_height="48dp" android:layout_width="match_parent" android:textSize="20dp" android:text="배터리 충전 방법이 표시됩니다." android:gravity="center" android:id="@+id/tv_charging_method"/>

    <TextView android:layout_height="48dp" android:layout_width="match_parent" android:textSize="20dp" android:text="배터리 충전 상태가 표시됩니다." android:gravity="center" android:id="@+id/tv_charging_status"/>

    <TextView android:layout_height="48dp" android:layout_width="match_parent" android:textSize="20dp" android:text="배터리 충전 레벨이 표시됩니다." android:gravity="center" android:id="@+id/tv_charging_level"/>

    <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:text="배터리 정보 확인" android:id="@+id/btn_charging_info"/>

    <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:text="부팅시 앱 자동 실행 설정" android:id="@+id/btn_boot_auto_run"/>


    <LinearLayout android:layout_height="48dp" android:layout_width="match_parent" android:orientation="horizontal">

    <TextView android:layout_height="match_parent" android:layout_width="0dp" android:text="받는 사람" android:gravity="center" android:layout_weight="2"/>

    <EditText android:layout_height="match_parent" android:layout_width="0dp" android:id="@+id/et_receiver_number" android:layout_weight="8" android:inputType="textPersonName" android:hint="메시지 수신자의 전화번호 입력" android:ems="10"/>

</LinearLayout>


    <LinearLayout android:layout_height="48dp" android:layout_width="match_parent" android:orientation="horizontal">

    <TextView android:layout_height="match_parent" android:layout_width="0dp" android:text="메시지" android:gravity="center" android:layout_weight="2"/>

    <EditText android:layout_height="match_parent" android:layout_width="0dp" android:id="@+id/et_send_message" android:layout_weight="8" android:inputType="textPersonName" android:hint="수신자에게 전달할 메시지 입력" android:ems="10"/>

</LinearLayout>

    <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:text="메시지 전송" android:id="@+id/btn_send_message"/>

</LinearLayout>