<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/layout_header"/>


    <LinearLayout android:layout_height="48dp" android:layout_width="match_parent" android:orientation="horizontal">

    <TextView android:layout_height="match_parent" android:layout_width="0dp" android:text="기본위치" android:gravity="center" android:layout_weight="2" android:id="@+id/textView3"/>

        <Spinner android:layout_height="match_parent" android:layout_width="0dp" android:layout_weight="8" android:id="@+id/sp_toast_gravity" android:textAlignment="center" android:entries="@array/toast_gravity_array"/>

    </LinearLayout>


    <LinearLayout android:layout_height="48dp" android:layout_width="match_parent" android:orientation="horizontal">

    <TextView android:layout_height="match_parent" android:layout_width="0dp" android:text="X축" android:gravity="center" android:layout_weight="2"/>

    <EditText android:layout_height="match_parent" android:layout_width="0dp" android:layout_weight="8" android:id="@+id/et_toast_x_pos" android:inputType="textPersonName" android:hint="토스트 메시지의 X축 위치 입력" android:ems="10"/>

</LinearLayout>


    <LinearLayout android:layout_height="48dp" android:layout_width="match_parent" android:orientation="horizontal">

    <TextView android:layout_height="match_parent" android:layout_width="0dp" android:text="Y축" android:gravity="center" android:layout_weight="2"/>

    <EditText android:layout_height="match_parent" android:layout_width="0dp" android:layout_weight="8" android:id="@+id/et_toast_y_pos" android:inputType="textPersonName" android:hint="토스트 메시지의 Y축 위치 입력" android:ems="10"/>

</LinearLayout>

    <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:text="토스트 메시지 표시" android:id="@+id/btn_show_toast"/>

    <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:text="커스텀 토스트 메시지 표시" android:id="@+id/btn_show_custom_toast"/>

    <TextView android:layout_height="48dp" android:layout_width="match_parent" android:text="커스텀 토스트 구현" android:gravity="center" android:id="@+id/textView4"/>


    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal">

    <Button android:layout_height="wrap_content" android:layout_width="0dp" android:text="빨강" android:layout_weight="1" android:id="@+id/btn_custom_toast_red" android:textColor="#000000" android:background="#FF0000"/>

    <Button android:layout_height="wrap_content" android:layout_width="0dp" android:text="초록" android:layout_weight="1" android:id="@+id/btn_custom_toast_green" android:textColor="#000000" android:background="#00FF00"/>

        <Button
            android:id="@+id/btn_custom_toast_blue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#0000FF"
            android:text="파랑"
            android:textColor="#000000"
            tools:ignore="TextContrastCheck" />

</LinearLayout>

</LinearLayout>