<?xml version="1.0" encoding="UTF-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout android:background="@android:color/transparent" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView android:layout_height="60dp" android:layout_width="60dp" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" android:src="@drawable/ic_question" android:layout_marginTop="55dp" android:layout_marginStart="30dp" android:id="@+id/imageView4"/>

    <TextView android:layout_height="wrap_content" android:layout_width="0dp" app:layout_constraintStart_toStartOf="@+id/imageView4" android:layout_marginTop="40dp" android:id="@+id/tv_dialog_content" app:layout_constraintTop_toBottomOf="@+id/imageView4" app:layout_constraintEnd_toEndOf="parent" android:textSize="25dp" android:hint="현재 텍스트 뷰에 다이얼 로그 내용을 입력하여 주세요." android:layout_marginEnd="30dp"/>


    <androidx.constraintlayout.widget.ConstraintLayout android:layout_height="60dp" android:layout_width="0dp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent">

    <View android:background="#26264d" android:layout_height="1dp" android:layout_width="wrap_content" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" android:id="@+id/line_top" app:layout_constraintEnd_toEndOf="parent"/>

    <View android:background="#26264d" android:layout_height="0dp" android:layout_width="1dp" app:layout_constraintTop_toTopOf="parent" android:id="@+id/line_center" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/btn_dialog_no" app:layout_constraintEnd_toStartOf="@+id/btn_dialog_yes"/>

    <Button android:background="@android:color/transparent" android:layout_height="0dp" android:layout_width="0dp" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" android:id="@+id/btn_dialog_no" android:textSize="15dp" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/line_center" android:textColor="#a1a1a1" android:text="NO"/>

        <Button
            android:id="@+id/btn_dialog_yes"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:text="yes"
            android:textColor="#a1a1a1"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/line_center"
            app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>