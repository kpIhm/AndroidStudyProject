<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/layout_header"/>

    <EditText android:layout_height="48dp" android:layout_width="match_parent" android:inputType="textPersonName" android:hint="실행하고자 하는 앱 패키지 명을 입력하세요." android:ems="10" android:id="@+id/et_run_package"/>

    <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/btn_run_package" android:text="입력한 대상 패키지 앱 실행"/>

    <EditText android:layout_height="48dp" android:layout_width="match_parent" android:inputType="textPersonName" android:hint="요청 아이디를 입력하여 주세요." android:ems="10" android:id="@+id/et_schema_send_id"/>

    <EditText android:layout_height="48dp" android:layout_width="match_parent" android:inputType="textPersonName" android:hint="요청 메시지를 입력하여 주세요." android:ems="10" android:id="@+id/et_schema_send_msg"/>

    <TextView android:layout_height="48dp" android:layout_width="match_parent" android:hint="응답 메시지가 표시됩니다." android:id="@+id/tv_schema_res_msg" android:gravity="center"/>

    <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/btn_url_schema" android:text="URL 스키마 이용 앱 실행"/>

</LinearLayout>